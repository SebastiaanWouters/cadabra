{
  "name": "cadali",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@types/bun": "latest",
    "ultracite": "6.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "check": "ultracite check",
    "fix": "ultracite fix",
    "tsc": "bun run --workspaces tsc",
    "test": "bun run test:cadabra && bun run test:integration",
    "test:cadabra": "bun --filter cadabra test",
    "test:integration": "bun --filter cadabra-integration-tests test",
    "bench": "bun --filter cadabra-integration-tests benchmark"
  }
}
