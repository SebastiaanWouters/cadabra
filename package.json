{
  "name": "cadabra",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@types/bun": "latest",
    "ultracite": "6.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "install:all": "bun install",
    "dev": "cd packages/cadabra && bun --hot run server.ts",
    "test": "bun run test:unit && bun run test:integration",
    "test:unit": "bun --filter @sebastiaanwouters/cadabra test",
    "test:integration": "bun --filter cadabra-integration-tests test",
    "bench": "bun --filter cadabra-integration-tests benchmark",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "tsc": "bun run --workspaces tsc",
    "docker:build": "cd packages/cadabra && docker build -t cadabra:dev .",
    "docker:run": "docker run -p 6942:6942 --rm --name cadabra-dev cadabra:dev",
    "docker:up": "cd packages/cadabra && docker compose up -d",
    "docker:down": "cd packages/cadabra && docker compose down",
    "clean": "rm -rf node_modules packages/*/node_modules *.log"
  }
}
